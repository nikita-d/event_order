.navbar
  background-color $primaryColor
  margin auto
  .logo
    display inline-block
    color $lightTextColor
    margin-right 50px
    .logo-title
       display inline-block
       min-height 109px
       padding-left 108px
       background-image url("../../logo.png")
       background-repeat no-repeat
       padding-top 40px
       font-size 2.0rem
       font-weight bold
  .nav-links
    span
      color $lightTextColor
      font-size 1.6rem
      margin-right 50px

@media screen and (max-width: 767px)
  .navbar
    margin auto
    .logo
      margin-right 25px
      .logo-title
        display inline-block
        min-height 109px
        padding-left 108px
        background-image url("../../logo.png")
        background-repeat no-repeat
        font-size 2.0rem
    .nav-links
      span
        margin-right 20px
      span:first-child
        margin-left 20px
